<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="72dp"
        android:layout_height="85dp"
        android:tint="#5d2961"
        android:src="@drawable/layout_bg"
        android:id="@+id/widgetBackground"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWidget"
            android:textSize="12dp"
            android:text="@string/next_lesson"
            android:gravity="center"
            android:id="@+id/nextLessonWidget"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textColor="@color/colorTextWidget"
            android:textSize="8dp"
            android:gravity="center"
            android:text="-"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textColor="@color/colorTextWidget"
            android:textSize="8dp"
            android:gravity="center"
            android:text="-"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lesson"
            android:textColor="@color/colorTextWidget"
            android:textSize="12dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Click to"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:duplicateParentState="true">
            <requestFocus android:focusable="true" android:focusableInTouchMode="true"
                android:duplicateParentState="true" />
        </TextView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:textColor="@color/colorTextWidget"
            android:textSize="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="update"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/room"
            android:textColor="@color/colorTextWidget"
            android:textSize="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="-" />
    </LinearLayout>
</RelativeLayout>